{
    "env": {
      "browser": true,
      "es2021": true,
      "node": true // Enable Node.js globals
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": ["error", { "varsIgnorePattern": "^[A-Z_]" }], // Allow unused variables starting with uppercase or underscore
      "react/prop-types": "off" // Disable prop-types rule if not using PropTypes
    }
  }